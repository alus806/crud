<%- include('./templates/header')  %> 
<!-- metemos el header -->
<main class="container">
    <h1 class="text-center mb-5">SERVICIOS</h1>
    <a href="servicios/nuevo" class="btn btn-danger btn-sm">AÃ±adir un nuevo servicio</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Servicio</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% servicios.forEach(({nombre, comentario, fecha, id}) =>{ %>
            <tr> 
                <td><%= nombre%></td>
                <td><%= comentario%></td>
                <td><%= fecha.toLocateDateString("es-ES")%></td>
                <td><a href="servicios/editar/<%=id%>" class="btn btn-danger btn-sm"></a>Editar</td>
                <td><a href="servicios/<%=id%>" class="btn btn-danger btn-sm"></a>Ver</td>
                <td><a href="servicios/eliminar/<%=id%>" class="btn btn-danger btn-sm"></a>Eliminar</td>
            </tr>
            <%  }) %>
        </tbody>

    </table>
</main>
